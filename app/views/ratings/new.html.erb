<% if @average_rating %>
  <p>The average rating is: <%= number_with_precision(@average_rating, precision: 2) %></p>
<% else %>
  <p>No ratings available yet.</p>
<% end %>


<h1>Rate Something</h1>
<%= form_with(model: @rating, url: ratings_path, method: :post) do |form| %>

  <div class="field">
    <%= form.label :value %>
    <%= form.number_field :value, min: 1, max: 5 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
