<% if @average_rating %>
  <div class="text-center rating">
    <p class="font-weight-bold">Rating: <%= @average_rating %></p>
    <div class="rating-stars">
      <% @average_rating.times do  %>
        <i class="bi bi-star-fill text-warning"></i>
      <% end %>
      <% (5 - @average_rating).times do  %>
        <i class="bi bi-star text-warning"></i>
      <% end %>
    </div>
  </div>
<% else %>
  <p class="text-center">No ratings available yet.</p>
<% end %>

<div class="container text-center mt-5">
  <h1>Rate Something</h1>
  <%= form_with(model: @rating, url: ratings_path, method: :post) do |form| %>
    <div class="form-group">
       <%= form.number_field :value, min: 1, max: 5, class: "form-control-sm" %>
    </div>
    <div class="form-group">
      <%= form.submit "Rate", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
