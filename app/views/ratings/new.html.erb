<% if @average_rating %>
  <div>
    <p>The average rating is: <%= @average_rating %></p>
    <div class="rating-stars">
      <% @average_rating.times do  %>
        <i class="bi bi-star-fill"></i>
      <% end %>
      <% (5 - @average_rating).times do  %>
        <i class="bi bi-star"></i>
      <% end %>
    </div>
  </div>
<% else %>
  <p>No ratings available yet.</p>
<% end %>


<h1>Rate Something</h1>
<%= form_with(model: @rating, url: ratings_path, method: :post) do |form| %>

  <div class="field">
    <%= form.label :value %>
    <%= form.number_field :value, min: 1, max: 5 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
